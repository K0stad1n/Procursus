#!/bin/sh

set -e

case "$1" in
    (install)
    /bin/launchctl load -w @MEMO_PREFIX@/Library/LaunchDaemons/com.vix.cron.plist
    ;;
    (upgrade)
    /bin/launchctl unload @MEMO_PREFIX@/Library/LaunchDaemons/com.vix.cron.plist
    /bin/launchctl load @MEMO_PREFIX@/Library/LaunchDaemons/com.vix.cron.plist
    ;;
    (*)
    exit 0
    ;;
esac

exit 0
